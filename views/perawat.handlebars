<!-- Dropdown Card Example -->
<div class="card mb-4">
    <!-- Card Header - Dropdown -->
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h5 class="m-0 font-weight-bold text-primary">Perawat</h5>
         <!-- Large modal -->
        <div class="d-sm-flex align-items-center justify-content-between">
            <button type="button" class="btn btn-success" data-toggle="modal" data-target=".perawat-modal"><i
                    class="fas fa-plus"></i> Tambah Perawat</button>

            <div class="modal fade perawat-modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel"
                aria-hidden="true">
                <div class="modal-dialog modal-lg modal-dialog-centered">
                    <div class="modal-content">
                        <form action="/perawat" method="post" class="m-5">
                            <div class="form-row">
                                <div class="form-group col-8">
                                    <label>Nama</label>
                                    <input type="text" name="nama" class="form-control" placeholder="nama"
                                        autocomplete="off">
                                </div>
                                <div class="form-group col-4">
                                    <label>Jam Jaga</label>
                                    <input type="text" name="jamJaga" class="form-control"
                                        placeholder="jam jaga" autocomplete="off">
                                </div>
                                <div class="form-group col-2">
                                    <label>Kode Ruang</label>
                                    <input type="text" name="kodeRuang" class="form-control" placeholder="kode ruang"
                                        autocomplete="off">
                                </div>
                                <div class="form-group col-5">
                                    <label>No. Telepon</label>
                                    <input type="text" name="noTelp" class="form-control"
                                        placeholder="no telepon" autocomplete="off">
                                </div>
                                <div class="form-group col-5">
                                    <label>Jenis Kelamin</label>
                                    <div>
                                        <div class="form-check form-check-inline mt-2 ml-2">
                                            <input class="form-check-input" type="radio" name="jk" value="laki-laki">
                                            <label class="form-check-label" for="inlineRadio1">Laki-laki</label>
                                        </div>
                                        <div class="form-check form-check-inline mt-2 ml-2">
                                            <input class="form-check-input" type="radio" name="jk" value="perempuan">
                                            <label class="form-check-label" for="inlineRadio2">Perempuan</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-12">
                                    <label>Alamat</label>
                                    <input type="text" name="alamat" class="form-control" placeholder="alamat"
                                        autocomplete="off">
                                </div>
                            </div>
                            <input type="submit" value="Tambah" class="btn btn-success btn-block mt-3">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Card Body -->
    <div class="card-body">
        <!-- Table pasien-->
        <table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nama</th>
                    <th scope="col">Kode Ruang</th>
                    <th scope="col">Jam Jaga</th>
                    <th scope="col">Aksi</th>
                </tr>
            </thead>
            <tbody>
                {{#each perawat}}
                <tr>
                    <th scope="col">{{incremented @index }}</th>
                    <td>{{ nama }}</td>
                    <td>{{ kodeRuang }}</td>
                    <td>{{ jamJaga }}</td>
                    <td>
                        <a href="/perawat/{{ _id }}"><i
                                class="float-left btn btn-sm bg-transparent fas fa-eye text-primary"></i></a>
                        <form method="POST" action="/perawat/{{ _id }}?_method=DELETE">
                            <button type="submit" name="_method" class="btn btn-sm bg-transparent"><i
                                    class="fas fa-trash text-danger"></i></button>
                        </form>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
