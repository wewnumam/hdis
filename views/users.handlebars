<!-- Dropdown Card Example -->
<div class="card mb-4">
    <!-- Card Header - Dropdown -->
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Pasien</h6>
        <!-- Large modal -->
        <div class="d-sm-flex align-items-center justify-content-between">
            <button type="button" class="btn btn-success" data-toggle="modal" data-target=".bd-example-modal-lg"><i
                    class="fas fa-plus"></i> Tambah Pasien</button>

            <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel"
                aria-hidden="true">
                <div class="modal-dialog modal-lg modal-dialog-centered">
                    <div class="modal-content">
                        <form action="/pasien" method="post" class="m-5">
                            <div class="form-row">
                                <div class="form-group col-2">
                                    <label>ID</label>
                                    <input type="text" name="id" class="form-control" placeholder="ID"
                                        autocomplete="off">
                                </div>
                                <div class="form-group col-10">
                                    <label>Nama</label>
                                    <input type="text" name="nama" class="form-control" placeholder="nama"
                                        autocomplete="off">
                                </div>
                                <div class="form-group col-2">
                                    <label>Usia</label>
                                    <input type="text" name="usia" class="form-control" placeholder="usia"
                                        autocomplete="off">
                                </div>
                                <div class="form-group col-5">
                                    <label>NIK</label>
                                    <input type="text" name="nik" class="form-control" placeholder="NIK"
                                        autocomplete="off">
                                </div>
                                <div class="form-group col-5">
                                    <label>Jenis Kelamin</label>
                                    <div>
                                        <div class="form-check form-check-inline mt-2 ml-2">
                                            <input class="form-check-input" type="radio" name="jk" value="laki-laki">
                                            <label class="form-check-label" for="inlineRadio1">Laki-laki</label>
                                        </div>
                                        <div class="form-check form-check-inline mt-2 ml-2">
                                            <input class="form-check-input" type="radio" name="jk" value="perempuan">
                                            <label class="form-check-label" for="inlineRadio2">Perempuan</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-12">
                                    <label>Alamat</label>
                                    <input type="text" name="alamat" class="form-control" placeholder="alamat"
                                        autocomplete="off">
                                </div>
                                <div class="form-group col-6">
                                    <label>Tanggal Daftar</label>
                                    <input type="text" name="tglDaftar" class="form-control"
                                        placeholder="tanggal daftar" autocomplete="off">
                                </div>
                                <div class="form-group col-6">
                                    <label>Jenis Pemeriksaan</label>
                                    <select name="jenPeriksa" class="form-control">
                                        <option selected>Pilih...</option>
                                        <option value="rawat jalan">Rawat Jalan</option>
                                        <option value="rawat inap">Rawat Inap</option>
                                    </select>
                                </div>
                            </div>
                            <input type="submit" value="Tambah" class="btn btn-success btn-block mt-3">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Card Body -->
    <div class="card-body">
        <!-- Table pasien-->
        <table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nama</th>
                    <th scope="col">Jenis Kelamin</th>
                    <th scope="col">Usia</th>
                    <th scope="col">Jen. Periksa</th>
                    <th scope="col">Aksi</th>
                </tr>
            </thead>
            <tbody>
                {{#each pasien}}
                <tr>
                    <th scope="col">{{ id }}</th>
                    <td>{{ nama }}</td>
                    <td>{{ jk }}</td>
                    <td>{{ usia }}</td>
                    <td>{{ jenPeriksa }}</td>
                    <td>
                        <a href="/users/pasien/{{ id }}"><i
                                class="float-left btn btn-sm bg-transparent fas fa-eye text-primary"></i></a>
                        <form method="POST" action="/pasien/{{ id }}?_method=DELETE">
                            <button type="submit" name="_method" class="btn btn-sm bg-transparent"><i
                                    class="fas fa-trash text-danger"></i></button>
                        </form>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
